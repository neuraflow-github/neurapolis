{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run server",
            "type": "shell",
            "command": "poetry run uvicorn src.server:app --port 8080 --reload",
            "options": {
                "cwd": "${workspaceFolder}/ca"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Streamlit",
            "type": "shell",
            "command": "${workspaceFolder}/ui/.venv/bin/streamlit run app.py",
            "options": {
                "cwd": "/Users/pascal/neurapolis/ui"
            },
            "problemMatcher": [],
            "group": "build"
        }
    ]
}